{
    "name": "parvenu",
    "version": "0.0.1",
    "description": "Parvenu - a Phaser 3 game in Typescript",
    "license": "MIT",
    "scripts": {
        "prebuild": "del-cli build",
        "build": "webpack --mode production",
        "build-serve": "webpack --mode production && webpack-dev-server --mode production",
        "dev": "webpack --mode development && webpack-dev-server --mode development",
        "lint:fix": "npm run lint:type-check && npm run lint:tslint:fix && npm run lint:prettier:fix",
        "lint:type-check": "tsc --noEmit",
        "lint:tslint": "tslint --project .",
        "lint:tslint:fix": "npm run lint:tslint --fix",
        "lint:prettier:fix": "prettier --write \"**/*.{graphql,json,md,yaml,yml}\"",
        "test": "mocha",
        "test:coverage": "nyc mocha",
        "test:watch": "mocha --watch --watch-extensions ts",
        "test:debug": "mocha --inspect-brk"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@types/sinon": "^7.0.3",
        "@types/sinon-chai": "^3.2.2",
        "chai": "^4.2.0",
        "commit-message-validator": "^0.1.6",
        "del-cli": "^1.1.0",
        "expose-loader": "0.7.5",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.0",
        "mocha": "^5.2.0",
        "nyc": "^13.1.0",
        "prettier": "^1.15.3",
        "prettier-tslint": "^0.4.0",
        "sinon": "^7.2.2",
        "sinon-chai": "^3.3.0",
        "ts-loader": "5.3.2",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "3.2.2",
        "webpack": "4.28.3",
        "webpack-cli": "3.1.2",
        "webpack-dev-server": "3.1.14"
    },
    "dependencies": {
        "codecov": "^3.5.0",
        "phaser": "^3.15.1",
        "rxjs": "^6.4.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commit-message-validator"
        }
    },
    "lint-staged": {
        "*.ts": [
            "tslint --fix",
            "git add"
        ],
        "*.{json,md,yaml,yml}": [
            "prettier --write",
            "git add"
        ]
    },
    "config": {
        "commit-message-validator": {
            "pattern": "^[A-Z]+ #[0-9]+ .*",
            "errorMessage": "Use the following pattern 'TYPE #123 my commit message'"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/proSingularity/parvenu.git"
    }
}
